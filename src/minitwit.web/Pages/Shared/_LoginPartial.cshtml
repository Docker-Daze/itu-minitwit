
<div class=navigation>
    @if (User.Identity!.IsAuthenticated)
    {
        <div>
            <a href="/@(User.Identity.Name)">my timeline</a> |
            <a href="/public">public timeline</a> |
            <a href="/logout">sign out [@User.Identity.Name]</a>
        </div>
    }
    else
    {
        <div>
            <a href="/public">public timeline</a> |
            <a class="nav-link text-dark" asp-page="/register">sign up</a> |
            <a class="nav-link text-dark" asp-page="/login">sign in</a>
        </div>
    }
</div>