@model minitwit.web.Pages.MessageInputModel

@if (User.Identity!.IsAuthenticated)
{
    <div class="twitbox">
        <h3>What's on your mind, @(User.Identity.Name)?</h3>
        <form asp-page="/add_message" method="post">
            <input type="text" asp-for="Message" size="60">
            <input type="submit" value="Share">
        </form>
    </div>
}